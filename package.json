{
  "name": "gelato-relayer",
  "version": "0.0.1",
  "description": "Gelato Relayer contracts and tests",
  "scripts": {
    "build": "yarn compile && npx tsc",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write '*/**/*.*{js,sol,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,sol,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "yarn husky install",
    "test": "npx hardhat test",
    "verify": "npx hardhat etherscan-verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gelatodigital/metabox-contracts.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.7.0",
    "@openzeppelin/contracts-upgradeable": "4.7.0",
    "@tsconfig/recommended": "1.0.1",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "18.0.4",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "@uniswap/v3-core": "1.0.1",
    "@uniswap/v3-periphery": "1.4.1",
    "chai": "4.3.6",
    "dotenv": "16.0.1",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "3.4.4",
    "ethers": "5.6.9",
    "hardhat": "2.8.0",
    "hardhat-deploy": "0.11.11",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.22",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.0",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.*{js,sol,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
